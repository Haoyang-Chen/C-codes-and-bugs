//
//  main.cpp
//  array arranging task
//
//  Created by Haoyang Chen on 2020/10/28.
//

#include <iostream>
using namespace std;
int main(int argc, const char * argv[])
{
    int arr[10]={5,3,6,7,9,1,8,2,4,0};
    for(int b = 0;b<10;b++)
    {
        cout << arr[b];
    }
    cout << endl;
    int i = sizeof(arr)/sizeof(arr[0]-1);
    for(int a=0;a<i;a++)
    {
        for(int j=0; j < sizeof(arr)/sizeof(arr[0])-a-1;j++)
        {
            if(arr[j] > arr[j + 1])
            {
                int temp = arr[j+1];
                arr[j + 1] = arr[j];
                arr[j] = temp;
            }
        }
    }
    for(int b = 0;b<10;b++)
    {
        cout << arr[b];
    }
    cout << endl;

    return 0;
}
